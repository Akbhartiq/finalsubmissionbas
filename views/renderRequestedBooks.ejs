<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Requested Books</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f2f2f2;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }

        .books-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
        }

        .book-card {
            width: calc(33.33% - 20px);
            margin-bottom: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .book-card img {
            width: 100%;
            height: auto;
            border-top-left-radius: 5px;
            border-top-right-radius: 5px;
        }

        .details {
            padding: 20px;
        }

        h2 {
            margin-top: 0;
            margin-bottom: 10px;
            font-size: 20px;
            color: #333;
        }

        p {
            margin: 0;
            color: #666;
            font-size: 16px;
        }

        .action-buttons {
            display: flex;
            justify-content: space-between;
            padding-top: 10px;
        }

        .ignore-button,
        .search-button,
        .order-button {
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            font-size: 16px;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

        .ignore-button {
            background-color: #ff6666;
            color: #fff;
        }

        .ignore-button:hover {
            background-color: #e63939;
        }

        .search-button {
            background-color: #007bff;
            color: #fff;
        }

        .search-button:hover {
            background-color: #0056b3;
        }

        .order-button {
            background-color: #28a745;
            color: #fff;
        }

        .order-button:hover {
            background-color: #218838;
        }

        /* Add a specific style for the action buttons */
        .action-buttons {
            display: flex;
            flex-direction: column;
            padding-top: 10px;
        }

        /* Add a specific style for the action buttons */
        .action-buttons {
            display: flex;
            flex-direction: column;
            padding-top: 10px;
        }

        /* Style for the dialogue box */
        .dialog-box {
            display: none;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            z-index: 999;
        }

        /* Style for the dialogue box input and button */
        .dialog-box input[type="number"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            box-sizing: border-box;
        }

        .dialog-box button {
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            font-weight: bold;
            background-color: #28a745;
            color: #fff;
        }

        .dialog-box button:hover {
            background-color: #218838;
        }

        /* Navigation Bar Styles */
        nav {
            background-color: #a9a9a9;
            /* Background color of the navigation bar */
            padding: 10px 20px;
            /* Padding around the navigation links */
            color: #fff;
            /* Text color */
        }

        nav ul {
            list-style-type: none;
            /* Remove default bullet points */
            margin: 0;
            padding: 0;
        }

        nav ul li {
            display: inline;
            /* Display list items horizontally */
            margin-right: 20px;
            /* Spacing between each list item */
        }

        nav ul li a {
            color: #fff;
            /* Text color of the links */
            text-decoration: none;
            /* Remove underline */
            font-weight: bold;
            /* Make the text bold */
        }

        nav ul li a:hover {
            text-decoration: underline;
            /* Underline on hover */
        }
    </style>
</head>

<body>
    <!-- Navigation Bar -->
    <nav>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/contact">Contact</a></li>
            <!-- Add more navigation links as needed -->
        </ul>
    </nav>
    <div class="container">
        <h1>Requested Books
        </h1>
        <div class="books-container">
            <% books.forEach((book, index)=> { %>
                <div class="book-card" id="book<%= index %>">
                    <div class="details">
                        <h2>
                            <%= book.title %>
                        </h2>
                        <p>Author: <%= book.author %>
                        </p>
                        <p>Genre: <%= book.genre %>
                        </p>
                        <p>Subject: <%= book.subject %>
                        </p>
                    </div>
                    <div class="action-buttons">
                        <!-- Ignore Button -->
                        <a href="#" class="ignore-button"
                            onclick="ignoreBook('<%= book._id %>', '<%= index %>')">Ignore</a>
                        <!-- Search Button -->
                        <a href="#" class="search-button"
                            onclick="searchOnline('<%= book.title %>', '<%= book.author %>')">Search Online</a>
                        <!-- Order Button -->
                        <a href="#" class="order-button" onclick="showOrderDialogue('<%= index %>')">Place Order</a>
                    </div>
                    <!-- Dialogue box for placing order -->
                    <div class="dialog-box" id="dialog<%= index %>">
                        <input type="number" id="quantity<%= index %>" placeholder="Enter quantity" min="1" required>
                        <button
                            onclick="orderBook('<%= book.title %>', '<%= book.author %>','<%=index%>')">Confirm</button>
                    </div>
                </div>
                <% }); %>
        </div>
    </div>

    <script>
        /* Function to remove the book card from the page */
        async function ignoreBook(bookId) {
            try {
                console.log("Is this function is getting invoked?");
                const response = await fetch(`/ignore-book/${bookId}`, {
                    method: 'DELETE'
                });
                if (response.ok) {
                    location.reload(); // Reload the page on successful deletion
                } else {
                    console.error('Failed to ignore book');
                }
            } catch (error) {
                console.error('Error ignoring book:', error);
            }
        }

        /* Function to search for books online */
        async function searchOnline(title, author) {
            window.location.href = `/search-online?title=${encodeURIComponent(title)}&author=${encodeURIComponent(author)}`;
        }

        /* Function to display the dialogue box for placing order */
        function showOrderDialogue(index) {
            const dialogBox = document.getElementById('dialog' + index);
            dialogBox.style.display = 'block';
        }


        /* Function to order the book */
        async function orderBook(title, author, index) {
            const quantity = document.getElementById('quantity' + index).value;
            console.log(`I have called You!`);
            console.log(quantity);
            //Generate the random price

            // Generate a random integer between 1 and 10
            const randomInt = Math.floor(Math.random() * 2000) + 1;
            console.log(`We are fine ${randomInt}`);
            try {
                const response = await fetch('/order_req_book', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        title: title,
                        author: author,
                        ISBN: 1234567890,
                        quantity: quantity,
                        price: randomInt
                    })
                });
                if (response.ok) {
                    console.log('Book ordered successfully:', quantity, 'copies of', title, 'by', author);
                    // Hide the dialogue box after ordering
                    document.getElementById('dialog' + index).style.display = 'none';
                    // You can also perform any other actions here, such as showing a success message
                } else {
                    console.error('Failed to order book:', response.statusText);
                    // Handle failed request
                }
            } catch (error) {
                console.error('Error ordering book:', error);
                // Handle error
            }
        }

    </script>
</body>

</html>